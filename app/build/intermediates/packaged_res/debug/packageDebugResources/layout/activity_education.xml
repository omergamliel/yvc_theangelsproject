<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- שדה חיפוש -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:padding="8dp"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="חיפוש הדרכה..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:padding="4dp" />
        </LinearLayout>

        <!-- שורת כפתורי סינון -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="רפואי"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/filter_button_medical"
                android:gravity="center" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="ביטחוני"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/filter_button_security"
                android:gravity="center"
                android:layout_marginStart="1dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="רכב"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/filter_button_vehicle"
                android:gravity="center"
                android:layout_marginStart="1dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="בע''ח"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/filter_button_animal"
                android:gravity="center"
                android:layout_marginStart="1dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:gravity="center">

            <!-- הדרכה 1 -->
            <LinearLayout
                android:id="@+id/education_card"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/event_item_background"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- תמונה -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/training1"
                    android:layout_marginEnd="8dp" />

                <!-- כותרת -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:text="איך להשתמש בדפיברילטור?"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- הדרכה 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/event_item_background"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- תמונה -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/training2"
                    android:layout_marginEnd="8dp" />

                <!-- כותרת -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="6dp"
                    android:text="איך להשתמש באפיפן?"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- הדרכה 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/event_item_background"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- תמונה -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/training3"
                    android:layout_marginEnd="8dp" />

                <!-- כותרת -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="6dp"
                    android:text="איך לשים חוסם עורקים?"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- הדרכה 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/event_item_background"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- תמונה -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/training4"
                    android:layout_marginEnd="8dp" />

                <!-- כותרת -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="6dp"
                    android:text="מה עושים במקרה של חנק?"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- הדרכה 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/event_item_background"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- תמונה -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/training5"
                    android:layout_marginEnd="8dp" />

                <!-- כותרת -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="6dp"
                    android:text="איך נבצע החייאה?"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
