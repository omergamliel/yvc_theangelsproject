<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="0dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="אירוע פעיל: מעקב בזמן אמת "
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="#e01e37"
            android:layout_marginBottom="0dp"/>

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layoutDirection="rtl"
            app:sv_stepsNumber="4"
            app:sv_animationType="All"
            app:sv_selectedCircleColor="#e01e37"
            app:sv_selectedTextColor="#343a40"
            app:sv_doneCircleColor="#99d98c"
            app:sv_doneStepLineColor="#99d98c"
            app:sv_doneStepMarkColor="#ffffff"
            app:sv_nextStepCircleEnabled="true"
            app:sv_nextStepCircleColor="#e5e5e5"
            app:sv_nextStepLineColor="#e5e5e5"
            app:sv_stepNumberTextSize="14sp"
            app:sv_selectedStepNumberColor="#ffffff"
            app:sv_stepLineWidth="2dp"
            app:sv_selectedCircleRadius="14dp"
            app:sv_doneCircleRadius="12dp"
            app:sv_stepPadding="4dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="סטטוס"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="#e9ecef"
            android:layout_marginBottom="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp">

            <!-- אנימציה מימין -->
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                app:lottie_rawRes="@raw/animation_searchvol"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <!-- טקסט משמאל -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="מחפשים אחר מתנדב זמין בסביבתך"
                android:textSize="17sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="זמן"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="#e9ecef"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="00:00"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginBottom="0dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:padding="0dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="#e01e37"
            android:layout_marginBottom="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:background="#FFF3E0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp">

            <!-- אנימציה מימין -->
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                app:lottie_rawRes="@raw/animation_attention"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <!-- טקסט משמאל -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="יש מספר פעולות שניתן לבצע בשביל לעזור עד הגעת המתנדב. מעבר לחלק ההדרכות"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>


        <!-- מפה -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#4a5759"
            android:text="מפה"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="כתובת האירוע"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="#3a506b"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="האחים טרבס 27 רחובות"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="#F8F9FA"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:padding="0dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="#3a506b"
            android:layout_marginBottom="0dp"/>

        <!-- כוחות הצלה -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התקשר לכוחות הצלה"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="#B2EBF2"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>
</ScrollView>
