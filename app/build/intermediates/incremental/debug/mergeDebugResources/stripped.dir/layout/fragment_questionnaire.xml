<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">

        <!-- Question 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="האם הבן אדם נמצא במקום בטוח?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgSafety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbSafetyYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כן"/>

            <RadioButton
                android:id="@+id/rbSafetyNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לא"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Question 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="האם יש דופק?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgPulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbPulseYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כן"/>

            <RadioButton
                android:id="@+id/rbPulseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לא"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Question 3-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="האם קצב הנשימה תקין?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgBreathing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbBreathingYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כן"/>

            <RadioButton
                android:id="@+id/rbBreathingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לא"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Question 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="האם קיים דימום?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgBleeding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbBleedingYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כן"/>

            <RadioButton
                android:id="@+id/rbBleedingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לא"/>
        </RadioGroup>
    </LinearLayout>
</ScrollView>
