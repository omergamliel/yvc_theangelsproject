<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/event_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/event_medical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/event_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מה קרה?"
                app:layout_constraintEnd_toStartOf="@+id/event_picture"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/event_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כתובת האירוע"
                app:layout_constraintEnd_toStartOf="@+id/event_picture"
                app:layout_constraintTop_toBottomOf="@+id/event_case"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="תאריך האירוע"
                app:layout_constraintEnd_toStartOf="@id/event_case"
                android:layout_marginRight="30dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/event_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="המתנדב שטיפל באירוע"
                app:layout_constraintEnd_toStartOf="@id/event_address"
                app:layout_constraintTop_toBottomOf="@+id/event_date"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/event_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="סטטוס האירוע"
                app:layout_constraintTop_toBottomOf="@id/event_address"
                app:layout_constraintEnd_toStartOf="@id/event_picture"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/details_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לפרטי האירוע"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"




                />






        </androidx.constraintlayout.widget.ConstraintLayout>










    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>