<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- תמונת פרופיל -->
        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- כפתור העלאת תמונה -->
        <Button
            android:id="@+id/btn_upload_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בחר תמונה"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="8dp"/>

        <!-- שדה שם פרטי -->
        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="שם פרטי"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_upload_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="16dp"/>

        <!-- שדה שם משפחה -->
        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="שם משפחה"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_first_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- שדה תעודת זהות -->
        <EditText
            android:id="@+id/et_id_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="תעודת זהות"
            android:inputType="number"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_last_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- שדה תאריך לידה -->
        <EditText
            android:id="@+id/et_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="תאריך לידה"
            android:focusable="false"
            android:inputType="date"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_id_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- שדה עיר מגורים -->
        <EditText
            android:id="@+id/et_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="עיר מגורים"
            android:inputType="text"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_birth_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- שדה כתובת מייל -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="כתובת מייל"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- שדה מספר טלפון -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="מספר טלפון"
            android:inputType="phone"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- שדה סיסמה -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="סיסמה"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- שדה אימות סיסמה -->
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="אימות סיסמה"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- צ'קבוקס רישיון נשק -->
        <CheckBox
            android:id="@+id/cb_gun_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="יש לי רישיון נשק"
            app:layout_constraintTop_toBottomOf="@id/et_confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintMarginTop="12dp"/>

        <!-- כפתור הרשמה -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הרשמה"
            app:layout_constraintTop_toBottomOf="@id/cb_gun_license"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
