<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- כותרת ראשית -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קריאה רפואית"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- סטטוס האירוע -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="ממתין למתנדב"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:background="#A5D6A7"
            android:layout_marginBottom="16dp"/>

        <!-- פרטי מתנדב -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FFCDD2"
                android:text="תמונה"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שם המתנדב"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:background="#FFCDD2"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מספר טלפון"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:background="#FFCDD2"
                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- טיימר -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="טיימר"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:background="#B3E5FC"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- מפה -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#80DEEA"
            android:text="מפה"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- כוחות הצלה -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התקשר לכוחות הצלה"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="#B2EBF2"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- טיפ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="יש מספר פעולות שניתן לבצע בשביל לעזור עד הגעת המתנדב. מעבר לחלק ההדרכות"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="#FFF3E0"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
