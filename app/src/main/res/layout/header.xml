<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="@drawable/header_background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/btnNotifications"
        android:layout_width="60dp"
        android:layout_height="63dp"
        android:contentDescription="Notifications Button"
        android:src="@drawable/alerts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/userpic"
        android:contentDescription="User Profile Picture"
        android:scaleType="centerCrop"
        android:background="@drawable/userpic"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/ibm_plex_sans_hebrew"
        android:letterSpacing="-0.03"
        android:gravity="end"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@id/userImage"
        app:layout_constraintTop_toTopOf="@id/userImage"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvUserSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle"
        android:fontFamily="@font/ibm_plex_sans_hebrew"
        android:letterSpacing="-0.03"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/tvUserName"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        android:layout_marginTop="-5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
