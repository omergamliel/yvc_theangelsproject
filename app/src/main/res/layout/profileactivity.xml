<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 🟦 סקשן עליון - מידע על המשתמש -->
    <FrameLayout
        android:id="@+id/userinfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2196F3"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent="0.35"/>

    <!-- ⚪ סקשן תחתון - הגדרות וכפתורים -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userchanges"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F5F5F5"
    app:layout_constraintTop_toBottomOf="@id/userinfo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="16dp">

    <!-- כפתור הצטרפות למערך מתנדבים -->
    <Button
        android:id="@+id/btn_volunteer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="הצטרפות למערך מתנדבים"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- כפתור שינוי שפת האפליקציה -->
    <Button
        android:id="@+id/btn_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="שפת האפליקציה"
        app:layout_constraintTop_toBottomOf="@id/btn_volunteer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="12dp"/>

    <!-- כפתור שינוי מיקום -->
    <Button
        android:id="@+id/btn_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="מיקום"
        app:layout_constraintTop_toBottomOf="@id/btn_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="12dp"/>

    <!-- כפתור ניקוי מטמון -->
    <Button
        android:id="@+id/btn_clear_cache"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ניקוי מטמון"
        app:layout_constraintTop_toBottomOf="@id/btn_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="12dp"/>

    <!-- כפתור שירות ותמיכה -->
    <Button
        android:id="@+id/btn_support"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="שירות ותמיכה"
        app:layout_constraintTop_toBottomOf="@id/btn_clear_cache"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="12dp"/>

    <!-- כפתור התנתקות -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="התנתקות"
        android:textColor="#D32F2F"
    app:layout_constraintTop_toBottomOf="@id/btn_support"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintMarginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
