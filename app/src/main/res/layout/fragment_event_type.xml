<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- כותרת הנחיה -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="יש לבחור את סוג האירוע"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- GridLayout עם 2 שורות ו-2 עמודות -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center">

        <!-- כפתור רפואי -->
        <TextView
            android:id="@+id/btnMedical"
            style="@style/EventTypeButton"
            android:text="רפואי"/>

        <!-- כפתור ביטחוני -->
        <TextView
            android:id="@+id/btnSecurity"
            style="@style/EventTypeButton"
            android:text="ביטחוני"/>

        <!-- כפתור רכב -->
        <TextView
            android:id="@+id/btnCar"
            style="@style/EventTypeButton"
            android:text="רכב"/>

        <!-- כפתור בעלי חיים -->
        <TextView
            android:id="@+id/btnAnimals"
            style="@style/EventTypeButton"
            android:text="בעל חיים"/>
    </GridLayout>

</LinearLayout>
